#include <stdio.h>
int main() {
    char text[100];
    int k, i;
    printf("Enter text: ");
    scanf("%[^\n]", text);
    printf("Enter shift: ");
    scanf("%d", &k);
    for (i = 0; text[i]!='\0';i++{
        if (text[i] >= 'A' && text[i] <= 'Z')
            text[i] = ((text[i] - 'A' + k) % 26) + 'A';
        else if (text[i] >= 'a' && text[i] <= 'z')
            text[i] = ((text[i] - 'a' + k) % 26) + 'a';
    }
    printf("Encrypted: %s\n", text);
    return 0;
}
